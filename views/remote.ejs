<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap-theme.min.css">

    <script type="text/javascript">
        window.server_url = '<%= server_url %>';
    </script>

</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1>Jukebox
                <small>remote</small>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div id="alert_socket_connect" class="alert alert-info hidden">
                socket.io connection established
            </div>
            <div id="alert_socket_disconnect" class="alert alert-warning hidden">
                socket.io connection lost
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="btn-group btn-group-justified">

                <div class="btn-group btn-group-lg">
                    <button id="button_step_backward" class="btn btn-primary" disabled="disabled">
                        <span class="glyphicon glyphicon-step-backward"></span>
                    </button>
                </div>

                <div class="btn-group btn-group-lg">
                    <button id="button_play_pause" class="btn btn-warning" disabled="disabled">
                        <span class="glyphicon glyphicon-play"></span>
                        <span class="inner_text">Play</span>
                    </button>
                </div>

                <div class="btn-group btn-group-lg">
                    <button id="button_step_forward" class="btn btn-primary" disabled="disabled">
                        <span class="glyphicon glyphicon-step-forward"></span>
                    </button>
                </div>

            </div>
        </div>
    </div>

    <div class="row" style="margin-top: 15px;">
        <div class="col-xs-12">
            <div id="progress_playtime" class="progress progress-striped">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"
                     style="width: 60%;">
                    60%
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="btn-group btn-group-justified">

                <div class="btn-group btn-group-lg">
                    <button id="button_volume_down" class="btn btn-primary" disabled="disabled">
                        <span class="glyphicon glyphicon-volume-down"></span>
                    </button>
                </div>

                <div class="btn-group btn-group-lg">
                    <button id="button_mute" class="btn btn-primary" disabled="disabled">
                        <span class="glyphicon glyphicon-volume-off"></span>
                        <span class="inner_text">Mute</span>
                    </button>
                </div>

                <div class="btn-group btn-group-lg">
                    <button id="button_volume_up" class="btn btn-primary" disabled="disabled">
                        <span class="glyphicon glyphicon-volume-up"></span>
                    </button>
                </div>

            </div>
        </div>
    </div>


    <div class="row" style="margin-top: 15px;">
        <div class="col-xs-12">
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"
                     style="width: 60%;">
                    <span class="sr-only">60%</span>
                </div>
            </div>
        </div>
    </div>

</div>


<script type="text/javascript" src="/js/jquery-1.11.0.js"></script>
<script type="text/javascript" src="/js/jquery-migrate-1.2.1.js"></script>
<script type="text/javascript" src="/js/bootstrap.min.js"></script>
<script type="text/javascript" src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/js/remote.js"></script>
</body>
</html>
